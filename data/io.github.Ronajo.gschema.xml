<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="ronajo">
	<schema id="io.github.Ronajo" path="/io/github/Ronajo/">
	  <key name="config-path" type="s">
	    <choices>
	      <choice value='$HOME/.var/app/io.github.Ronajo'/>
        <choice value='$HOME/.config'/>
	    </choices>
	    <default>'$HOME/.var/app/io.github.Ronajo'</default>
      <summary>Path of the config folder</summary>
	  </key>
    <key name="filter" type="s">

      <choices>
        <choice value='sfw'/>
        <choice value='nsfw'/>
        <choice value='sfw-with-ecchi'/>
        <choice value='nsfw-with-ecchi'/>
      </choices>
      <default>'sfw'</default>
      <summary>Filter of the shows</summary>
    </key>
	  <key name="filter-library" type="b">
	    <default>false</default>
	    <summary>whether to apply the filter for the library</summary>
	  </key>
	  <key name="player" type="s">
      <choices>
        <choice value='MPV'/>
        <choice value='VLC'/>
      </choices>
      <default>'VLC'</default>
      <summary>Player for remote player</summary>
    </key>
	  <key name="translation" type="s">
      <choices>
        <choice value='sub'/>
        <choice value='dub'/>
      </choices>
      <default>'sub'</default>
      <summary>Translation type for shows</summary>
    </key>
	</schema>
</schemalist>
